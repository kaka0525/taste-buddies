{% extends "base.jinja2" %}

{% block body %}

<div id="#form-container">
<form id="view-group-form" action="{{ request.route_url('group_edit', group_id=group.id) }}" method='POST'>
    <h1>Edit your group!</h1>
     <div><!--     an image uploading bar thing suppose to be right here -->
        <img src="../../static/img/dog.jpg" alt="Group Profile Photo" class="group-profile-photo">
    </div>
<label>Group Name</label>
    <div class="field-group">
        <input type="text" name="group_name" id="group_name"
        value="{{ group.name }}"/>
    </div>
    <label>Age</label>
    <div class="field-group">
        <select class="group_age" name="group_age" />
        {% for age in ages %}
            {% if age.age_group == group.age %}
                <option selected='selected' value='{{ age.id }}' name="group_age" class="group_age">{{ group.age }}</option>
            {% else %}
                <option value='{{ age.id }}' name="group_age" class="group_age">{{ age.age_group }}</option>
            {% endif %}
        {% endfor %}
        </select>
    </div>
    <label>Location</label>
        <select class="group_location" name="group_location"/>
        {% for location in locations %}
            {% if location.city == group.location %}
                <option selected='selected' value='{{ location.id }}' name='group_location' class="group_location">{{ group.location }}</option>
            {% else %}
                <option value='{{ location.id }}' name='group_location' class="group_location">{{ location.city }}</option>
            {% endif %}
        {% endfor %}
        </select>
    </div>

    <div id="group_taste" class="field-group">
        <label>Taste</label>
        {% for taste in tastes %}
            {% for group_food_taste in group.taste %}
                {% if group_food_taste.taste == taste.taste %}
                    <input type="checkbox" name="personal_taste" class="personal_taste"
                           value="{{ taste.id }}" checked="checked">{{ taste.taste }}
                {% else %}
                    <input type="checkbox" name="personal_taste" class="personal_taste" value="{{ taste.id }}">{{ taste.taste }}
                {% endif %}
            {% endfor %}
        {% endfor %}

        <label>Diet</label>
        {% for diet in diets %}
            {% for group_diet in group.diet %}
                {% if group_diet.diet == diet.diet %}
                    <input type="checkbox" class="diet"
                           value="{{ diet.id }}" checked="checked" name="group_diet">{{ diet.diet }}
                {% else %}
                    <input type="checkbox" class="diet" value="{{ diet.id }}" name="group_diet">{{ diet.diet }}
                {% endif %}
            {% endfor %}
        {% endfor %}
    </div>

    <div class="field-group">
        <label>Price</label>
        {% for cost in costs %}
            {% if group.cost == cost.id %}
                <input type="radio" name="group_price" class="style"
                       value="{{ cost.id }}" checked="checked">{{ cost.cost }}
            {% else %}
                <input type="radio" name="group_price" class="style" value="{{ cost.id }}">{{ cost.cost }}
            {% endif %}
        {% endfor %}
    </div>
        <label>Group Description</label>
    <div class="group_description" id="group_description" name="group_description">
        <textarea
            id="text"
            name="group_description"
            class="group_description"
            cols="60"
            rows="8"
            value="{{ group.description }}">{{ group.description }}</textarea>
    </div>

    <input id="save_group" type="submit" name="profile_save" value="Save Group"/>
</form>
</div>

{% endblock %}
