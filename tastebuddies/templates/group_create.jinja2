{% extends "base.jinja2" %}

{% block body %}

<div id="#form-container">
<form method="POST" id="create-group-form" action="{{ request.route_url('group_create') }}">
    <h1>Create your group!</h1>
    <div><!--     an image uploading bar thing suppose to be right here -->
        <img src="../static/img/dog.jpg" alt="Group Profile Photo" class="group-profile-photo">
    </div>
    <label>Group Name</label>
    <div class="field-group">
        <input type="text" name="group_name" id="group_name"
        placeholder="Group Name"/>
    </div>
    <label>Age</label>
    <div class="field-group">
        <select name="age" class="group_age_range" />
            {% for age in ages %}
            <option value={{ age.id }}>{{ age.age }}</option>
            {% endfor %}
        </select>
    </div>
    <label>Location</label>
    <div id="location" class="field-group">
        <select name="location" class="location"/>
            {% for location in location %}
            <option value={{ location.id }}>{{ location.location }}</option>
            {% endfor %}
        </select>
    </div>
    <div id="personal_taste" class="field-group">
        <label>Taste</label>
        {% for taste in tastes %}
        <input type="checkbox" name="personal_taste" class="style" value={{ taste.id }}>{{ taste.taste }}
        {% endfor %}
    </div>
    <div id="dietary_restriction" class="field-group">
        <label>Dietary Restrictions</label>
        {% for diet in diets %}
        <input type="checkbox" name="diet" class="style" value={{ diet.id }}>{{ diet.diet }}
        {% endfor %}
    </div>
    <div id="personal_cost_range" class="field-group">
        <label>Cost</label>
        {% for cost in cost %}
          <input type="radio" name="group_cost" class="style" value={{ cost.id }}>{{ cost.cost }}
        {% endfor %}
    </div>
        <label>Group Description</label>
    <div class="field-group" id="group_description">
        <textarea
            id="text"
            name="group_description"
            placeholder="Write your group description here!!"
            cols="60"
            rows="8"></textarea>
    </div>

    <input id= "save_group" type="submit" name="profile_save" value="Save Group"/>
</form>
</div>
{% endblock %}
