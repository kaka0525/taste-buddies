{% extends "base.jinja2" %}

{% block body %}

<h1>Create your group!</h1>

<form action="{{ request.route_url('group_detail', group_id=1) }}">
    <p>An image uploading thing should be here...?</p>
    <input type="text" name="group_name" id="group_name"
    value="Group Name"/>

    <h2>Age Range</h2>
    <select class="age_range" />
