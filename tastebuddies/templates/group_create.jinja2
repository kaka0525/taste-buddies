        <option>Kitsap</option>
        <option>Eastside</option>
        <option>Skagit</option>
        <option>South King</option>
        <option>65-74</option>
    </select>

    <input type="text" name="location" id="location"
    value="Location"/>

    <h2>Taste</h2>
