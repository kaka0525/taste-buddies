{% extends "base.jinja2" %}

{% block body %}

<div id="#form-container">
<form method="POST" id="create-group-form" action="{{ request.route_url('group_create') }}">
    <h1>Create your group!</h1>
    <div><!--     an image uploading bar thing suppose to be right here -->
        <img src="../static/img/dog.jpg" alt="Group Profile Photo" class="group-profile-photo">
    </div>
    <label>Group Name</label>
    <div class="field-group">
        <input type="text" name="name" id="name"
        placeholder="Group Name"/>
    </div>
    <label>Age</label>
    <div class="field-group">
        <select name="age" class="group_age_range" />
            {% for age in criteria.AGES %}
            <option value={{ age }}>{{ age }}</option>
            {% endfor %}
        </select>
    </div>
    <label>Location</label>
    <div id="location" class="field-group">
        <select name="location" class="location"/>
            {% for location in criteria.LOCATIONS %}
            <option value={{ location }}>{{ location }}</option>
            {% endfor %}
        </select>
    </div>
    <div id="taste" class="field-group">
        <label>Taste</label>
        {% for taste in criteria.TASTES %}
        <input type="checkbox" name="taste" class="style" value={{ taste }}>{{ taste }}
        {% endfor %}
    </div>
    <div id="dietary_restriction" class="field-group">
        <label>Dietary Restrictions</label>
        {% for diet in criteria.DIETS %}
        <input type="checkbox" name="diet" class="style" value={{ diet }}>{{ diet }}
        {% endfor %}
    </div>
    <div id="personal_cost_range" class="field-group">
        <label>Cost</label>
        {% for cost in criteria.COSTS %}
          <input type="radio" name="cost" class="style" value={{ cost }}>{{ cost }}
        {% endfor %}
    </div>
        <label>Group Description</label>
    <div class="field-group" id="description">
        <textarea
            id="text"
            name="description"
            placeholder="Write your group description here!!"
            cols="60"
            rows="8"></textarea>
    </div>

    <input id= "save_group" type="submit" name="profile_save" value="Save Group"/>
</form>
</div>
{% endblock %}
