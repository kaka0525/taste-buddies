{% extends "base.jinja2" %}

{% block body %}

<div id="#form-container">
<form method="POST" id="create-profile-form" action="{{ request.route_url('profile_edit', username=username) }}">

<h1>Edit your Personal Profile!</h1>

<div><!--     an image uploading bar thing suppose to be right here -->
       <img src="../../static/img/dog2.jpg" alt="Personal Profile Photo" class="profile-photo">
    </div>

    <label>First Name</label>
    <div class="field-group">
        <input type="text" name="first_name" id="first_name"
        value="{{ user.firstname }}"/>
    </div>

    <label>Last Name</label>
    <div class="field-group">
        <input type="text" name="last_name" id="last_name"
        value="{{ user.lastname }}">
    </div>

    <label>Age Group</label>
    <div class="field-group">

        <select name="age" class="age_range">
            {% for age in criteria.AGES %}
                {% if age in criteria.age %}

                <option value={{ age }} selected>{{ age }}</option>

                {% else %}
                <option value={{ age }}>{{ age }}</option>

                {% endif %}
            {% endfor %}
        </select>

    </div>

    <label>Location</label>
    <div id="location" class="field-group">

        <select name="location" class="location"/>
            {% for location in criteria.LOCATIONS %}
            {% if location in criteria.location %}
            <option value={{ location }} selected>{{ location }}</option>

            {% else %}
            <option value={{ location }}>{{ location }}</option>

            {% endif %}
            {% endfor %}
        </select>

    </div>

    <div id="personal_taste" class="field-group">
        <label>Taste</label>

        {% for taste in criteria.TASTES %}
            {% if criteria.taste %}
            {% if taste in criteria.taste %}
            <input type="checkbox" checked='checked' name="taste" class="style" value={{ taste }}>{{ taste }}
            {% else %}
            <input type="checkbox" name="taste" class="style" value={{ taste }}>{{ taste }}
            {% endif %}
            {% endif %}
        {% endfor %}

    </div>

    <div id="dietary_restriction" class="field-group">
        <label>Dietary Restrictions</label>

        {% for diet in criteria.DIETS %}
            {% if criteria.diet %}
            {% if diet in criteria.diet %}
            <input type="checkbox" checked='checked' name="diet" class="style" value={{ diet }}>{{ diet }}
            {% else %}
            <input type="checkbox" name="diet" class="style" value={{ diet }}>{{ diet }}

            {% endif %}
            {% endif %}
        {% endfor %}

    </div>

    <label>Favorite Restaurants</label>
    <div class="field-group">
        <input type="text" name="favorite_restaurants" id="favorite_restaurants"
        value="{{ user.restaurants }}"/>
    </div>

    <label>Favorite Food</label>
    <div class="field-group">
    <input type="text" name="favorite_food" id="favorite_food"
    value="{{ user.food }}"/>
    </div>

    <div id="personal_cost_range" class="field-group">
        <label>Cost</label>

        {% for cost in criteria.COSTS %}
          {% if cost in criteria.cost %}
          <input type="radio" checked='checked' name="cost" class="style" value={{ cost }}>{{ cost }}

          {% else %}
          <input type="radio" name="cost" class="style" value={{ cost }}>{{ cost }}

          {% endif %}

        {% endfor %}

    </div>

    <input id="save_personal_profile" type="submit" name="profile_save" value="Save Profile"/>
</form>
</div>

{% endblock %}