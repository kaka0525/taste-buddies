{% extends "base.jinja2" %}

{% block body %}

<h1>Log In!</h1>

<form action="{{ request.route_url('profile_detail', username='username') }}">
    <input type="text" name="username" id="username"
    value="Username"/>

    <input type="text" name="password" id="password"
    value="Password"/>

    <input type="submit" name="submit" value="Login"/>
</form>

{% endblock %}