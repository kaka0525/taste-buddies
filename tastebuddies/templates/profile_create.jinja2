{% extends "base.jinja2" %}

{% block body %}

<div id="#form-container">
<form id="create-profile-form" action="{{ request.route_url('profile_detail', username='username') }}">
    <h1>Create your profile!</h1>
    <div><!--     an image uploading bar thing suppose to be right here -->
       <img src="../static/img/dog2.jpg" alt="Group Profile Photo" class="profile-photo">
    </div>
    <label>First Name</label>
    <div class="field-group">
        <input type="text" name="first_name" id="first_name"
        placeholder="First Name"/>
    </div>
    <label>Last Name</label>
    <div class="field-group">
        <input type="text" name="last_name" id="last_name"
        placeholder="Last Name"/>
    </div>

    <label>Age</label>
    <div class="field-group">
        <select class="age_range" name="age_range"/>
            <option name="18-24">18-24</option>
            <option name="25-34">25-34</option>
            <option name="35-44">35-44</option>
            <option name="45-54">45-54</option>
            <option name="55-64">55-64</option>
            <option name="65-74">65-74</option>
            <option name="75+">75+</option>
        </select>
    </div>
    <label>Location</label>
    <div class="field-group">
        <select class="location" name="location"/>
            <option name="Seattle">Seattle</option>
            <option name="Kitsap">Kitsap</option>
            <option name="Eastside">Eastside</option>
            <option name="Skagit">Skagit</option>
            <option name="South_King">South King</option>
        </select>
    </div>
    <div id="personal_taste" class="field-group">
        <label>Taste</label>
        <input type="checkbox" name="personal_taste" class="style" value="Sour"> Sour
        <input type="checkbox" name="personal_taste" class="style" value="Sweet"> Sweet
        <input type="checkbox" name="personal_taste" class="style" value="Salty"> Salty
        <input type="checkbox" name="personal_taste" class="style" value="Spicy"> Spicy
        <input type="checkbox" name="personal_taste" class="style" value="Bitter"> Bitter
        <input type="checkbox" name="personal_taste" class="style" value="Italian"> Italian
        <input type="checkbox" name="personal_taste" class="style" value="Indian"> Indian
        <input type="checkbox" name="personal_taste" class="style" value="Chinese"> Chinese
        <input type="checkbox" name="personal_taste" class="style" value="American_Classic"> American Classic
        <input type="checkbox" name="personal_taste" class="style" value="German"> German
        <input type="checkbox" name="personal_taste" class="style" value="British"> British
        <input type="checkbox" name="personal_taste" class="style" value="French"> French
        <input type="checkbox" name="personal_taste" class="style" value="Vietnamese"> Vietnamese
        <input type="checkbox" name="personal_taste" class="style" value="Japanese"> Japanese
        <input type="checkbox" name="personal_taste" class="style" value="Pub"> Pub
        <input type="checkbox" name="personal_taste" class="style" value="Persian"> Persian
        <input type="checkbox" name="personal_taste" class="style" value="Mediterranian"> Mediterranian
        <input type="checkbox" name="personal_taste" class="style" value="Greek"> Greek
        <input type="checkbox" name="personal_taste" class="style" value="Afghan">Afghan
        <input type="checkbox" name="personal_taste" class="style" value="Somolian">Somolian
        <input type="checkbox" name="personal_taste" class="style" value="Thai">
        Thai
        <input type="checkbox" name="personal_taste" class="style" value="Barbecue">Barbecue
        <input type="checkbox" name="personal_taste" class="style" value="Soul">
        Soul
        <input type="checkbox" name="personal_taste" class="style" value="Ethiopian">Ethiopian
        <input type="checkbox" name="personal_taste" class="style" value="Jamaican">Jamaican
        <input type="checkbox" name="personal_taste" class="style" value="Mexican">Mexican
        <input type="checkbox" name="personal_taste" class="style" value="Korean">Korean
        <label>Diet</label>
        <input type="checkbox" name="personal_taste" class="style" value="Vegetarian">Vegetarian
        <input type="checkbox" name="personal_taste" class="style" value="Vegan">Vegan
        <input type="checkbox" name="personal_taste" class="style" value="Meat_Eater">Meat Eater
        <input type="checkbox" name="personal_taste" class="style" value="Gluten_Free">Gluten Free
        <input type="checkbox" name="personal_taste" class="style" value="Low_Carb">Low Carb
    </div>
    <label>Favorite Restaurants</label>
    <div class="field-group">
        <input type="text" name="favorite_restaurants" id="favorite_restaurants"
        placeholder="Favorite Restaurants"/>
    </div>
    <label>Favorite Food</label>
    <div class="field-group">
    <input type="text" name="favorite_food" id="favorite_food"
    placeholder="Favorite Food"/>
    </div>
    <div id="personal_price_range" class="field-group">
        <label>Price</label>
        <input type="radio" name="group_price" class="style" value="cheap">$
        <input type="radio" name="group_price" class="style" value="average">$$
        <input type="radio" name="group_price" class="style" value="moderate">$$$
        <input type="radio" name="group_price" class="style" value="expensive">$$$$
    </div>
    <input id="save_personal_profile" type="submit" name="profile_save" value="Save Profile"/>
</form>
</div>

{% endblock %}
