{% extends "group_detail.jinja2" %}

{% block forumbody %}
<h2> Want to start an event? Leave a comment!!</h2>

<div id="#form-container">
<form id="leave-comment-form" action="{{ request.route_url('profile_detail', username='username') }}">

    <label>Name</label>
    <div class="field-group">
        <input type="text" name="first_name" id="first_name"
        placeholder="First Name"/>
    </div>
    <label>Comment</label>
    <div class="field-group">
        <textarea
            id="text"
            name="text"
            placeholder="Want to create an event? Leave a comment here"
            cols="60"
            rows="8"></textarea>
    </div>
    <input id="save_comment" type="submit" name="save_comment" value="Comment"/>
</form>

</div>

<section id="forum">
    {% for discussion in final_forum %}
    <article class="discussion" id="{{ discussion[0] }}">
        <h3>{{ discussion[0] }}</a></h3>
        <hr/>
        {% for post in discussion[1] %}
        <div class="post">
            {{ post[1] }}
            <p class="dateline">{{ post[0]('%b. %d, %Y') }}</p>
        </div>
        {% else %}
        <div class="entry">
            <p><em>No one has planned anything yet. Start a discussion!</em></p>
        </div>
        {% endfor %}
    </article>
    {% endfor %}
</section>
{% endblock %}
